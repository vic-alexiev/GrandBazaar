@model List<GrandBazaar.WebClient.Areas.Customer.Models.ItemViewModel>

@{
    ViewData["Title"] = "Index";
}

@section Scripts{
    @if (TempData["TxInfo"] != null)
    {
        <script>grandBazaar.showTxInfo('@TempData["TxInfo"]')</script>
    }

    @if (TempData["Error"] != null)
    {
        <script>grandBazaar.showError('@TempData["Error"]')</script>
    }
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <div class="carousel-inner" role="listbox">
        @for (int index = 0; index < Model.Count; index++)
        {
            <div class="item @(index == 0 ? "active" : "")">
                <img src='data:image/png;base64,@Model[index].Images[0].DataBase64Encoded' alt="@Model[index].Images[0].Name" class="img-responsive" />
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model[index].Name)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model[index].Name)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model[index].Description)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model[index].Description)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model[index].Price)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model[index].Price)
                            Wei
                        </dd>
                    </dl>
                </div>
                <div class="carousel-caption">
                    @Html.ActionLink("Details", "Details", new { area = "Customer", id = Model[index].Id }, new { @class = "btn btn-default" })
                </div>
            </div>
        }
    </div>
    @if (Model.Count > 1)
    {
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    }
</div>
