@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/dolmabahce-palace.png" title="Dolmabahce Palace" alt="Dolmabahce Palace" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/hagia-sophia.png" title="Hagia Sophia" alt="Hagia Sophia" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/topkapi-palace.png" title="Topkapi Palace" alt="Topkapi Palace" class="img-responsive" />
        </div>
        <div class="item">
            <img src="~/images/yildiz-palace.png" title="Yildiz Palace" alt="Yildiz Palace" class="img-responsive" />
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <input type="image"
           src="~/images/tugra.png"
           title="Enter"
           id="myEnter"
           onclick="location.href='@Url.Action("Index", "Items", new { area = User.IsInRole("Seller") ? "Seller" : "Customer" })'" />
</div>
